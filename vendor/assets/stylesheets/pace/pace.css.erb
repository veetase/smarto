/*
 *= require pace/counter
 */
.pace {
  width: 200px;
  height: 200px;
  position: absolute;
	top:0;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
  z-index: 2000;
  opacity: 0;
  -webkit-transition: all 0.5s linear 0s;
  -moz-transition: all 0.5s linear 0s;
  transition: all 0.5s linear 0s;
}

.pace.pace-active {
  opacity: 1;
}

.pace .pace-activity {
  width: 200px;
  height: 200px;
  border-radius: 100px;
  background: url(<%= asset_path 'static_page/loading.gif' %>)  no-repeat;
  background-size: 100% 100%;
  position: absolute;
	top:0;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
}
.stop-scrolling {
  height: 100%;
  overflow: hidden;
}
